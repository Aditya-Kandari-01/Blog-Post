<div class="author">
  <h1 class="author_heading">Hi, I am AK</h1>
  <p class="author_body">Web developer and content creator.</p>
</div>
<img src="/img/bullet.png" class="ak" alt="developer is looking for a good picture" />

<section class="articles">
  <h2 class="articles_heading">Latest Posts</h2>
  <ul class="article-ul">
    <% data.forEach(post => { %> 
    <li>
      <a href="/post/<%= post._id %>">
        <span><%= post.title %></span>
        <span class="article-list_date"
          ><%=post.createdAt.toDateString() %></span
        >
      </a>
    </li>
    <% }) %>
  </ul>
  <div class="pagination-post">
    <% if(nextPage !== null) { %>
    <a href="/?page=<%= nextPage%>" class="pagination">
      &lt; View Older Posts &gt;</a
    >
    <% } %> <% if(current > 1) { %>
    <a href="/?page=<%= current - 1 %>" class="pagination"
      >&lt;Newer Posts&gt;</a
    >
    <% } %>
  </div>
</section>
